<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    
    <%= form_with(url: search_item_path(:id), local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "商品名・商品説明で一致するキーワードで探す", class: "input-box" %>
    <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', "#", class: "category-list" %></li>
      <li><%= link_to 'ブランド', "#", class: "brand-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><font size="5" color="blue"><%= current_user.nickname %></font></li>
        <li><%= link_to '○マイページ', "/users/#{current_user.id}", class: "logout" %></li>
        <li><%= link_to '○ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <li><%= link_to '○ユーザー情報編集', edit_user_registration_path, method: :get, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>